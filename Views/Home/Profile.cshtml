    <div class="container">
        <div class="row " style="padding-top:20px">
            <div class="avatar-container center-block" style="width:100px">
                <a href="" >@if (Model.picture == null || Model.picture=="")
                            {
                                <img class="img-responsive" src="~/images/avatar.png" width="100" height="100" style="border-radius: 10px;" />
