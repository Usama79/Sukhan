                            else
                            {
                                <img src=@Model.picture  width="100" height="100" style="border-radius: 10px;" />
                            }
                </a>
            </div>

            </div>
          
        <div class="row" style="padding-top: 15px; font-family: 'Arial Rounded MT'; color:white">
            <div class="center-block text-center text-b">
                <h2>@Model.fname &nbsp; @Model.lname </h2>
